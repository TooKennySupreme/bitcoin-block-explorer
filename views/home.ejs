<!doctype html>
<html>

<head>
    <title>Home - Johnny's Bitcoin Block Explorer</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
        crossorigin="anonymous">

    <!-- load bootstrap css -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <!-- load fontawesome -->

    <link rel="stylesheet" href="/style.css">



    <style>
    </style>
</head>






<body>

    <!-- navbar -->
    <nav class="navbar navbar-light" style="background-color: #072A41;">
        <div class="container w-75">
            <div class="col-3 whitetextnavbar">
                <a class="navbar-brand" href="/"><span class="fa fa-bitcoin"></span><b><span class="whitetextnavbar2">lock
                            Explorer
                        </span>
                    </b></a>
            </div>
            <div class="col-2 whitetextnavbar">
                <span class="fa fa-dollar"></span> <a href="/price"><%= price.toFixed(2) %></a>
            </div>
            <div class="col-2 whitetextnavbar">
                <span class="fa fa-user"></span> <a href="#"></span> Profile</a>
            </div>
            <div class="col-5">
                <form action="/search" method="post">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search the blockchain" aria-label="Search" name="input">
                        <button class="btn" type="submit"><span class="fa fa-search"></span> </button>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </nav>



    <div class="container">

        <!-- title of main content -->
        <div class="row mt-4">
            <div class="mx-auto">
                <h4 class="mainheader">Johnny's Bitcoin Block Explorer</h4>
            </div>
        </div>

        <div class="mx-auto" id="maindiv">


            <table class="table table-bordered table-striped table-hover table-sm table-dark w-100 mx-auto">

                <!-- title bar of tables -->
                <thead class="thead-light">
                    <tr>
                        <th class="tableHeader" colspan='2'>
                            Bitcoin Network Status
                        </th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <th style="width: 33%">
                            <span class="fa fa-chain"></span> Chain
                        </th>
                        <td>
                            <%= blockchainInfo.chain %>
                        </td>
                    </tr>

                    <tr>
                        <th style="width: 33%">
                            <span class="fa fa-bars"></span> Number of blocks (height)
                        </th>
                        <td>
                            <%= blockchainInfo.blocks %>
                        </td>
                    </tr>

                    <tr>
                        <th style="width: 33%">
                            <span class="fa fa-clock-o"></span> Most recent block (<%= blockInfo.time %> min ago)

                        </th>
                        <td>
                            <a href="/blockhash/<%= blockchainInfo.bestblockhash %>/0">
                                <%= blockchainInfo.bestblockhash %></a>

                        </td>
                    </tr>

                    <tr>
                        <th style="width: 33%">
                            <span class="fa fa-sort-amount-desc"></span> Difficulty
                        </th>
                        <td>
                            <%= blockchainInfo.difficulty %>
                        </td>
                    </tr>

                    <tr>
                        <th style="width: 33%">
                            <span class="fa fa-tachometer"></span> Network hashes per second
                        </th>
                        <td>
                            <%=  miningInfo.networkhashps %>
                        </td>
                    </tr>

                    <tr>
                        <th style="width: 33%">
                            <span class="fa fa-unlock-alt"></span> Size of mempool (unconfirmed transactions)
                        </th>
                        <td>
                            <%=  mempoolInfo.size %>
                        </td>
                    </tr>

                </tbody>
            </table>

        </div>






        <!-- title of secondary content -->
        <div class="row mt-4">
            <div class="mx-auto">
            </div>
        </div>

        <div class="mx-auto" id="maindiv">



            <table class="table table-bordered table-striped table-hover table-sm table-dark w-100 mx-auto">
                <!-- title bar of tables -->
                <thead class="thead-light">
                    <tr>
                        <th class="tableHeader" colspan='2'>
                            Full Node Status
                        </th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <th style="width: 33%">
                            <span class="fa fa-power-off"></span> Status
                        </th>
                        <td>
                            <% if (networkInfo.networkactive) { %>
                                <span class="fa fa-check-square"> Active
                                    <% } else {%>
                                        <span class="fa fa-times-rectangle"></span> Inactive
                                        <% } %>
                        </td>
                    </tr>

                    <tr>
                        <th style="width: 33%">
                            <span class="fa fa-archive"></span> Client version
                        </th>
                        <td>
                            <%= networkInfo.subversion %>
                        </td>
                    </tr>

                    <tr>
                        <th style="width: 33%">
                            <span class="fa fa-laptop"></span> Protocol version
                        </th>
                        <td>
                            <%= networkInfo.protocolversion %>
                        </td>
                    </tr>

                    <tr>
                        <th style="width: 33%">
                            <span class="fa fa-spinner"></span> Sync progress
                        </th>
                        <td>
                            <%= blockchainInfo.verificationprogress %>%
                        </td>
                    </tr>


                    <tr>
                        <th style="width: 33%">
                            <span class="fa fa-hdd-o"></span> Size of blockchain
                        </th>
                        <td>
                            <%= blockchainInfo.size_on_disk %> GB
                        </td>
                    </tr>


                    <tr>
                        <th style="width: 33%">
                            <span class="fa fa-group"></span> Number of peer connections
                        </th>
                        <td>
                            <%= networkInfo.connections %>
                        </td>
                    </tr>

                    <tr>
                        <th style="width: 33%">
                            <span class="fa fa-download"></span> Total downloaded
                        </th>
                        <td>
                            <%= netTotals.totalbytesrecv %> GB
                        </td>
                    </tr>

                    <tr>
                        <th style="width: 33%">
                            <span class="fa fa-upload"></span> Total uploaded
                        </th>
                        <td>
                            <%= netTotals.totalbytessent %> GB
                        </td>
                    </tr>








                </tbody>
            </table>

        </div>


    </div>








    <!--- Footer -->
    <footer class="site-footer page-footer fixed-bottom font-small pt-2">
        <div class="container-fluid col-7 col-md-3 text-center">
            <div class="row">
                <div class="col-4">
                    <a id="footerHome" href="/">Home</a>
                </div>
                <div class="col-4">
                    <a id="footerSignup" href="/profile">Profile</a>
                </div>
                <div class="col-4">
                    <a id="footerLogin" href="/verifymessage" data-toggle="modal" data-target="#login">Verify</a>
                </div>
            </div>
        </div>
    </footer>





</body>

</html>
